<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/abc_ic_menu_selectall_mtrl_alpha"
    tools:context="com.marinamurashev.simpletodo.activities.EditItemActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvItemFormTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etItemValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvItemFormTitle"
        android:textColor="#ff36016d"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_alignRight="@+id/tvDueDate"
        android:layout_alignEnd="@+id/tvDueDate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_save"
        android:onClick="onSaveItem"
        android:id="@+id/bSaveItem"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/rgPriority"
        android:layout_alignEnd="@+id/rgPriority" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/priority_title"
        android:id="@+id/tvPriorityTitle"
        android:layout_below="@+id/etItemValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/rgPriority"
        android:layout_below="@+id/tvPriorityTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tvDueDate">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/low_priority"
            android:id="@+id/rbLowPriority"
            android:checked="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medium_priority"
            android:id="@+id/rbMediumPriority" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/high_priority"
            android:id="@+id/rbHighPriority" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bDueDate"
        android:onClick="showDatePickerDialog"
        android:layout_marginTop="147dp"
        android:layout_below="@+id/etItemValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvDueDate"
        android:layout_alignTop="@+id/bDueDate"
        android:layout_alignBottom="@+id/bDueDate"
        android:layout_alignRight="@+id/bSaveItem"
        android:layout_alignEnd="@+id/bSaveItem"
        android:layout_toEndOf="@+id/bDueDate"
        android:layout_toRightOf="@+id/bDueDate"
        android:padding="10dp" />

</RelativeLayout>
